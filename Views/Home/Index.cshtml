<!--I don't need a using statement, because it's in the import views file.-->
@model BooksViewModels
<h1>The Bookstore</h1>

@foreach (Book b in Model.Books)
{
    <!--<h3>@b.Title</h3>
    <ul>
        <li>Author: @b.Author</li>
        <li>Category: @b.Classification --  @b.Category</li>
        <li>Page Count: @b.PageCount pages</li>
        <li>ISBN number: @b.Isbn</li>
        <li>Publisher: @b.Publisher</li>
        <li>Price: @b.Price</li>
    </ul>-->

    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @b.Title
                <span class="badge rounded-pill btn-primary badge-primary bg-primary " style="float:right">
                    <small>@b.Price.ToString("c")</small>
                </span>
            </h4>
        </div>
        <div class="card-text p-1">
            <ul>
                <li>Author: @b.Author</li>
                <li>Category: @b.Classification --  @b.Category</li>
                <li>Page Count: @b.PageCount pages</li>
                <li>ISBN number: @b.Isbn</li>
                <li>Publisher: @b.Publisher</li>
            </ul>
        </div>
    </div>
}
<div page-change="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>

